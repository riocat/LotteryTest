<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="smvcMybatis.Dao.UserDao">
	<select id="getUserByName" parameterType="string"
		resultType="smvcMybatis.Entity.User">
		SELECT * FROM user u WHERE u.name = #{name}
	</select>

	<insert id="regester" parameterType="smvcMybatis.vo.UserCondition">
		INSERT INTO
		user(name, password, email,create_time)
		VALUES(#{name},#{password},#{email},now())
	</insert>
</mapper>
